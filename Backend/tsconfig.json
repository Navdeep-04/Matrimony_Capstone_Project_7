{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",

    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,
    "declaration": false,

    "moduleDetection": "force",
    "isolatedModules": false
  },
  "include": ["src/**/*", "src/server.ts"],
  "exclude": ["node_modules"]
}
